{
  "compilerOptions": {
//    "baseUrl": "tsconfig",
    "declaration": false,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
//    "mapRoot": "./",
    "module": "es2020",
    "moduleResolution": "node",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "target": "es5",
    "types": [
      "hammerjs"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "alwaysStrict": true,
    "strictPropertyInitialization": false
  },
  "exclude": [
    "./environments/*.ts"
  ]
}
