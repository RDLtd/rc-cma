{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "cli": {
    "analytics": "88773262-9892-40fc-9722-6f22c348d7d8"
  },
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "rc-app": {
      "root": "",
      "sourceRoot": "src",
      "projectType": "application",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist",
            "index": "src/index.html",
            "main": "src/main.ts",
            "tsConfig": "tsconfig.app.json",
            "polyfills": [
              "zone.js"
            ],
            "stylePreprocessorOptions": {
              "includePaths": [
                "node_modules"
              ]
            },
            "assets": [
              "src/assets",
              "src/favicon.svg",
              "src/apple-touch-icon.png",
              "src/manifest.json"
            ],
            "styles": [
              "src/styles/styles.scss"
            ],
            "allowedCommonJsDependencies": [
              "lodash",
              "zone.js",
              "cloudinary-core",
              "qrcode"
            ],
            "vendorChunk": true,
            "extractLicenses": false,
            "buildOptimizer": false,
            "sourceMap": true,
            "optimization": false,
            "namedChunks": true
          },
          "configurations": {
            "production": {
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "namedChunks": false,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ]
            },
            "staging": {
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "namedChunks": false,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.staging.ts"
                }
              ]
            }
          },
          "defaultConfiguration": ""
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "rc-app:build",
            "ssl": true,
            "sslCert": "tls/localhost-cert.pem",
            "sslKey": "tls/localhost-key.pem"
          },
          "configurations": {
            "production": {
              "browserTarget": "rc-app:build:production"
            },
            "staging": {
              "browserTarget": "rc-app:build:staging"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "rc-app:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ],
            "scripts": [
              "node_modules/material-components-web/dist/material-components-web.js",
              "node_modules/marked/lib/marked.js"
            ],
            "styles": [
              "src/styles/styles.scss"
            ],
            "assets": [
              "src/assets",
              "src/favicon.svg",
              "src/apple-touch-icon.png",
              "src/manifest.json"
            ]
          }
        }
      }
    },
    "rc-app-e2e": {
      "root": "e2e",
      "sourceRoot": "e2e",
      "projectType": "application",
      "architect": {
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "./protractor.conf.js",
            "devServerTarget": "rc-app:serve"
          }
        }
      }
    }
  },
  "schematics": {
    "@schematics/angular:component": {
      "prefix": "rc",
      "style": "scss",
      "inlineStyle": true,
      "skipTests": true
    },
    "@schematics/angular:directive": {
      "prefix": "rc"
    },
    "@schematics/angular:service": {
      "skipTests": true
    }
  }
}
